{
  "name": "discord-habit-system",
  "version": "1.0.0",
  "description": "Discord bot for habit tracking with Notion integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:discord": "ts-node scripts/run-tests-discord.ts",
    "test:discord:watch": "ts-node scripts/watch-and-test.ts",
    "docker:build": "docker build -t discord-habit-system .",
    "docker:start": "./docker-commands.sh start",
    "docker:stop": "./docker-commands.sh stop",
    "docker:restart": "./docker-commands.sh restart",
    "docker:logs": "./docker-commands.sh logs",
    "docker:deploy": "./deploy.sh",
    "docker:update": "./update-and-deploy.sh"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "axios": "^1.12.2",
    "canvas": "^2.11.2",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "gpt-tokenizer": "^3.4.0",
    "node-cron": "^3.0.3",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
